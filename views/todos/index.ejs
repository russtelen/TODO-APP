<% layout('layouts/boilerplate.ejs') %>
<body>
  <h1>Todos</h1>

  <ul>
    <% todos.map(t => { %>
    <li><%= t.title %></li>
    <form action="/todos/<%= t._id %>?_method=DELETE" method="POST">
      <button>Done</button>
    </form>
    <% }) %>
  </ul>

  <form action="/todos" method="POST">
    <input type="text" placeholder="Enter Todo" name="title" required />
    <button type="submit">Add Todo</button>
  </form>
</body>
